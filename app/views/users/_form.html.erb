<%= form_with(model: @user) do |f| %>
    <%= render 'shared/error_messages', object: @user %>
    <%= f.label :name, t('static_pages.users._form.name') %>
    <%= f.text_field :name, class: 'form-control' %>

    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control' %>

    <%= f.label :password, t('static_pages.users._form.password') %>  
    <%= f.password_field :password, class: 'form-control' %>
  
    <%= f.label :password_confirmation, t('static_pages.users._form.passwordConfirm') %>
    <%= f.password_field :password_confirmation, class: 'form-control' %>
  
    <%= f.submit t('static_pages.users._form.submit'), class: "btn btn-primary" %>
  <% end %>