<% provide(:title, "Log in") %>

<h1><%= t('static_pages.sessions.login') %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(url: login_path, scope: :session) do |f| %>
    <%= f.label :email, t('static_pages.sessions.email') %>
    <%= f.email_field :email, class: 'form-control' %>

    <%= f.label :password, t('static_pages.sessions.password') %>
    <%= f.password_field :password, class: 'form-control' %>

    <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span><%= t('static_pages.sessions.rememberContent') %></span>
      <% end %>
    
    <%= f.submit t('static_pages.sessions.login'), class: "btn btn-primary" %>
  <% end %>
  <p><%= t('static_pages.sessions.newUser') %> <%= link_to t('static_pages.sessions.signup'), signup_path %></p>
 </div>
</div>